// Available variables which can be used inside of strings.
// ${workspaceRoot}: the root folder of the team
// ${file}: the current opened file
// ${fileBasename}: the current opened file's basename
// ${fileDirname}: the current opened file's dirname
// ${fileExtname}: the current opened file's extension
// ${cwd}: the current working directory of the spawned process

{
	"version": "0.1.0",
	"command": "magic",
	"isShellCommand": true,
	"showOutput": "always",
	"tasks": [
		{
			"taskName": "build project",
			"suppressTaskName": true,
			"isBuildCommand": true,
			"args": [ "build", "-s", "-t", "--config", ".configuration/build.json", "${workspaceRoot}" ],
			"problemMatcher": {
				"fileLocation": ["absolute"],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):?\\s+(error|warning|info):?\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		},
		{
			"taskName": "compile current file",
			"suppressTaskName": true,
			"args": [ "compile", "${file}" ],
			"problemMatcher": {
				"fileLocation": ["absolute"],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):?\\s+(error|warning):?\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		},
		{
			"taskName": "test current file",
			"suppressTaskName": true,
			"args": [ "test", "${file}" ],
			"isTestCommand": true,
			"problemMatcher": {
				"fileLocation": ["absolute"],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):?\\s+(error|warning):?\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		},
		{
			"taskName": "test project",
			"suppressTaskName": true,
			"args": [ "test", "${workspaceRoot}" ],
			"problemMatcher": {
				"fileLocation": ["absolute"],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):?\\s+(error|warning):?\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		},
		{
			"taskName": "verify current file",
			"suppressTaskName": true,
			"args": [ "verify", "${file}" ],
			"problemMatcher": {
				"fileLocation": ["absolute"],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):?\\s+(info):?\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		},
		{
			"taskName": "verify project",
			"suppressTaskName": true,
			"args": [ "verify", "${workspaceRoot}" ],
			"problemMatcher": {
				"fileLocation": ["absolute"],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):?\\s+(info):?\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		}
	]
}
